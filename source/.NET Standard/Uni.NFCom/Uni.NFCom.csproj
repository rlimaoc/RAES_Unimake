    <EmbeddedResource Include="Xml\Schemas\NFCom\eventoNFComTiposBasico_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\eventoNFCom_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\nfcomTiposBasico_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\nfcom_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\procEventoNFCom_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\procNFCom_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\retConsSitNFCom_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\retConsStatServNFCom_v1.00.xsd" />
    <EmbeddedResource Include="Xml\Schemas\NFCom\retEventoNFCom_v1.00.xsd" />
