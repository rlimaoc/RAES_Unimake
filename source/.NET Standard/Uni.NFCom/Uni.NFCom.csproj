<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<LangVersion>7.3</LangVersion>
		<AssemblyVersion>2024.01.04.1725</AssemblyVersion>
		<FileVersion>2024.01.04.1725</FileVersion>
		<RunPostBuildEvent>Always</RunPostBuildEvent>
		<Configurations>Debug;Release;INTEROP_Release</Configurations>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<OutputPath>..\..\Uni.NFCom\Compilacao\</OutputPath>
		<DefineConstants>TRACE;DEBUG</DefineConstants>
		<GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
		<DocumentationFile>..\..\Uni.NFCom\Compilacao\Uni.NFCom.xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<OutputPath>..\..\Uni.NFCom\Compilacao\Release</OutputPath>
		<GenerateSerializationAssemblies>Auto</GenerateSerializationAssemblies>
		<DocumentationFile>..\..\Uni.NFCom\Compilacao\Release\Uni.NFCom.xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='INTEROP_Release|AnyCPU'">
		<OutputPath>..\..\Uni.NFCom\Compilacao\INTEROP_Release</OutputPath>
		<GenerateSerializationAssemblies>Auto</GenerateSerializationAssemblies>
		<DocumentationFile>..\..\Uni.NFCom\Compilacao\INTEROP_Release\Uni.NFCom.xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='INTEROP_Release|netstandard2.0|AnyCPU'">
		<DefineConstants>TRACE;INTEROP</DefineConstants>
		<DocumentationFile>..\..\Uni.NFCom\Compilacao\INTEROP_Release\Uni.NFCom.xml</DocumentationFile>
		<WarningsAsErrors>NU1605;CS1591</WarningsAsErrors>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netstandard2.0|AnyCPU'">
		<WarningsAsErrors>NU1605;CS1591</WarningsAsErrors>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.0|AnyCPU'">
	  <WarningsAsErrors>NU1605;CS1591</WarningsAsErrors>
	</PropertyGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Servicos\Config\NFCom\Config.xml" />
